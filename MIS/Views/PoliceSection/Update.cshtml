@model MSI.Model.PoliceSection

<form method="post" asp-for="Update">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info text-center pl-3">Update police section</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8 text-center align-items-center justify-content-center">
                        <input asp-for="Name" class="form-control" />

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Address"></label>
                    </div>
                    <div class="col-3">
                        <input asp-for="Address.City" class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="Address.Street" class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="Address.Number" class="form-control" />
                    </div>
                </div>
                @*<div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Policemen"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Policemen.Count" class="form-control" />

                    </div>
                </div>*@
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a class="btn btn-danger w-100" asp-action="Index"> Go Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
