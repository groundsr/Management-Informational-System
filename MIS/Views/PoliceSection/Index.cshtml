        <div class="modal-content">
            <div class="modal-body">
                <form asp-controller="PoliceSection" asp-action="Create">
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" id="Name" placeholder="Name" name="Name">
                    </div>
                    <div class="form-group">
                        <label for="Address">Address</label>
                        <div class="form-group row">
                            <div class="col-4">
                                <input type="text" class="form-control" id="Type" placeholder="City" name="Address.City">
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" id="Type" placeholder="Street" name="Address.Street">
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" id="Type" placeholder="Number" name="Address.Number">
                            </div>
                        </div>
                        @*<input type="text" class="form-control" id="Type" placeholder="Type" name="Type">*@
                    </div>
                    <div class="form-group">
                        <label for="RootPoliceman.Email">Email</label>
                        <input type="text" class="form-control" id="Name" placeholder="Email" name="email">
                    </div>
                    <button class="btn btn-police btn-police-rounded">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>



