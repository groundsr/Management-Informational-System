<div id="map">
    <script>
        function loadEditModal(id, name, street , city , number) {
            $('#stationId').val(id);
            $('#stationName').val(name);
            $('#stationStreet').val(street);
            $('#stationCity').val(city);
            $('#stationNumber').val(number);
        }


        var addresses = [];
        var geocoder;

        function initMap() {
            
            //centrul romaniei
            const sibiu = { lat: 45.7958, lng: 24.1522 };

            const map = new google.maps.Map(document.getElementById("map"), {
                zoom: 6.2,
                center: sibiu,
            });

            geocoder = new google.maps.Geocoder()
        $.ajax({
            url: "/PoliceSection/GetSectionsAddress",
            success: function (data) {
                addresses = data;
                for (var i = 0; i < addresses.length; i++) {
                    var address = addresses[i].number + addresses[i].street + addresses[i].city;
                    geocoder.geocode({ 'address': address },
                        function (results, status) {
                            if (status == 'OK') {
                                var marker3 = new google.maps.Marker({
                                    map: map,
                                    position: {
                                        lat: results[0].geometry.location.lat(),
                                        lng: results[0].geometry.location.lng()
                                    }
                                });
                            } else {
                                alert('Geocode was not successful for the following reason: ' + status);
                            }
                        })
                }
            }
        })
        }


        function loadEditModal(id, name, address, policemen) {
            $("#editSectionId").val(id)
            $("#editSectionName").val(name)
            $("#editSectionAddress").val(address)
            $("#editPolicemanCount").val(policemen)
            $('#editPoliceSection').modal('show');

        }

        function getPoliceSectionId() {
            var id = document.getElementById('policeSectionId').value;
            return id;
        }
    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBBoMY_7eHfch0A4ZJMQwIaxflMamkJpto&callback=initMap"
            type="text/javascript"></script>
</div>

