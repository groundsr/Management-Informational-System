<div class="container mt-4 mb-5">
    <div class="row text-center">
        <div class="col col-4 text-center">
            <a class="btn btn-primary text-center" asp-controller="PoliceSection" asp-action="Create" style="width:150px">
                <h4>Create</h4>
            </a>
        </div>
        <div class="col col-8 text-center" style="width:400px; margin-left:auto">
            <form asp-controller="PoliceSection" asp-action="Index" id="textsearch" method="get">
                <div class="search border">
                    <input type="text" class="search-input" id="textsearch"
                           placeholder="Search..." name="searchString"> <a href="#" class="search-icon">
                        <i class="fa fa-search"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>







<div class="container">
    <div class="row">
        <div class="card-group">
            @foreach (var obj in Model)
            {
                if (obj != null)
                {
                    <div class="col-4 mb-5">

                        <div class="shadow card rounded justify-content-center text-center align-items-center zoom c4rd"
                             style="width: 18rem; background-color:#374f6b; height:300px ;color:#fff; border-radius:50px">
                            <div class="card-body p-0">
                                <h5 class="card-title">@obj.Name</h5>
                                @if (obj.Policemen.Count.Equals(1))
                                {
                                    <p>@obj.Policemen.Count <span>police officer</span></p>
                                }
                                else
                                {<p>@obj.Policemen.Count <span>police officers</span></p>}


                                <p class="card-text">
                                    <i class="bi bi-geo-alt"></i>  <span>@obj.Address.City ,</span>
                                    <span>@obj.Address.Street, </span>
                                    <span>@obj.Address.Number</span>
                                </p>
                                <div class="row text-center mb-4">
                                    <div class="col col-6">
                                        <a class="btn btn-primary" asp-route-Id="@obj.Id" asp-controller="policesection" asp-action="Update">
                                            Update
                                        </a>
                                    </div>
                                    <div class="col col-4">
                                        <a class="btn btn-danger" asp-route-Id="@obj.Id" asp-controller="policesection" asp-action="Delete">
                                            Delete
                                        </a>
                                    </div>
                                </div>
                                <a asp-controller="policesection" asp-action="Hierarchy" asp-route-Id="@obj.Id" class="btn btn-light">Go to section</a>
                            </div>
                        </div>

                    </div>
                }
            }
        </div>
    </div>
</div>




