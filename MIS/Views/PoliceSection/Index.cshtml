<div class="container mt-4 mb-5">
    <div class="row text-center">
        <div class="col col-4 text-center">
            <a class="btn btn-primary text-center" data-toggle="modal" data-target="#addStation" asp-controller="PoliceSection"  style="width:150px">
                <h4>Create</h4>
            </a>
        </div>
        <div class="col col-8 text-center" style="width:400px; margin-left:auto">
            <form asp-controller="PoliceSection" asp-action="Index" id="textsearch" method="get">
                <div class="search border">
                    <input type="text" class="search-input" id="textsearch" placeholder="Search..." name="SearchFilter.Term" />
                    <input type="hidden" class="search-input" id="textsearch" name="SearchFilter.Name" value="searchByName" />
                    <button type="submit" class="search-icon" >
                        <i class="fa fa-search"> </i>
                    </button>
                </div>
                
